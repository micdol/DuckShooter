<Window x:Name="window_DuckShooter" 
        x:Class="DuckShooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuckShooter"
        Title="DuckShooter" 
        Height="480" 
        Width="640" MouseMove="window_DuckShooter_MouseMove">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/bathtube.JPG"/>
    </Window.Background>
    <Grid x:Name="grid_windowDuckShooter">
        <Image x:Name="image_target" 
               HorizontalAlignment="Left" 
               Height="100" 
               Margin="232,190,0,0" 
               VerticalAlignment="Top" 
               Width="100" 
               Source="Resources/Images/target.png" Panel.ZIndex="999" IsManipulationEnabled="True" MouseDown="image_target_MouseDown"/>
        <Label x:Name="label_duckCounter" 
               Content="DuckCounter: " 
               FontSize="16px"
               FontWeight="Bold"
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"/>
    </Grid>
</Window>
